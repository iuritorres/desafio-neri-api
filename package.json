      "cors": "^2.8.5",
      "express": "^4.21.0",
      "express-async-errors": "^3.1.1",
      "pg": "^8.13.0",
      "swagger-ui-express": "^5.0.1",
      "zod": "^3.23.8"
   },
   "devDependencies": {
      "@eslint/js": "^9.10.0",
      "@types/node": "^22.5.5",
      "@types/pg": "^8.11.10",
      "@types/swagger-ui-express": "^4.1.6",
      "eslint": "^9.10.0",
      "globals": "^15.9.0",
